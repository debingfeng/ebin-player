{
  "name": "ebin-player",
  "version": "1.0.0",
  "description": "A modular, plugin-based web video player with modern architecture",
  "main": "dist/ebin-player.umd.js",
  "module": "dist/ebin-player.esm.js",
  "types": "dist/ebin-player.d.ts",
  "exports": {
    ".": {
      "import": "./dist/ebin-player.esm.js",
      "require": "./dist/ebin-player.umd.js",
      "types": "./dist/ebin-player.d.ts"
    },
    "./styles": "./dist/styles.css",
    "./dist/styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/ebin-player.git"
  },
  "homepage": "https://github.com/your-username/ebin-player#readme",
  "bugs": {
    "url": "https://github.com/your-username/ebin-player/issues"
  },
  "scripts": {
    "build": "npm run clean && npm run build:css:prod && rollup -c --bundleConfigAsCjs",
    "build:dev": "npm run clean && npm run build:css && rollup -c --bundleConfigAsCjs",
    "dev": "rollup -c -w --bundleConfigAsCjs",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "build:css": "npx @tailwindcss/cli -i ./src/styles/tailwind.css -o ./dist/styles.css --watch",
    "build:css:prod": "npx @tailwindcss/cli -i ./src/styles/tailwind.css -o ./dist/styles.css --minify",
    "prepublishOnly": "npm run build",
    "prepack": "npm run build"
  },
  "keywords": [
    "video-player",
    "web-player",
    "plugin-system",
    "typescript",
    "modular"
  ],
  "author": "Ebin Player Team",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.2",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-typescript": "^12.1.4",
    "@tailwindcss/cli": "^4.1.14",
    "@types/node": "^24.6.2",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "rollup": "^4.52.4",
    "rollup-plugin-dts": "^6.2.3",
    "tailwindcss": "^4.1.14",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3"
  }
}
