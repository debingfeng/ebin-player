{
  "name": "ebin-player",
  "version": "0.0.2",
  "description": "A modular, plugin-based web video player with modern architecture",
  "main": "dist/ebin-player.umd.js",
  "module": "dist/ebin-player.esm.js",
  "types": "dist/ebin-player.d.ts",
  "exports": {
    ".": {
      "import": "./dist/ebin-player.esm.js",
      "require": "./dist/ebin-player.umd.js",
      "types": "./dist/ebin-player.d.ts"
    },
    "./styles": "./dist/styles.css",
    "./dist/styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fengdebing/ebin-player.git"
  },
  "homepage": "https://github.com/fengdebing/ebin-player#readme",
  "bugs": {
    "url": "https://github.com/fengdebing/ebin-player/issues"
  },
  "scripts": {
    "build": "npm run clean && npm run build:css:prod && rollup -c --bundleConfigAsCjs",
    "build:dev": "npm run clean && npm run build:css && rollup -c --bundleConfigAsCjs",
    "dev": "rollup -c -w --bundleConfigAsCjs",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "build:css": "npx @tailwindcss/cli -i ./src/styles/tailwind.css -o ./dist/styles.css --watch",
    "build:css:prod": "npx @tailwindcss/cli -i ./src/styles/tailwind.css -o ./dist/styles.css --minify",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "version": "standard-version",
    "version:patch": "standard-version --release-as patch",
    "version:minor": "standard-version --release-as minor",
    "version:major": "standard-version --release-as major",
    "version:prerelease": "standard-version --prerelease",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "changelog:all": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "docs:api": "typedoc",
    "docs:build": "node scripts/build-docs.js",
    "docs:copy": "cp -r examples demos docs-api/",
    "docs:serve": "http-server docs-api -p 8090",
    "docs:dev": "pnpm run docs:build && pnpm run docs:serve",
    "prepublishOnly": "pnpm run build",
    "prepack": "pnpm run build",
    "prepublish": "pnpm run build",
    "publish:patch": "pnpm run version:patch && pnpm run build && pnpm publish",
    "publish:minor": "pnpm run version:minor && pnpm run build && pnpm publish",
    "publish:major": "pnpm run version:major && pnpm run build && pnpm publish",
    "publish:dry": "pnpm run build && pnpm publish --dry-run"
  },
  "keywords": [
    "video-player",
    "web-player",
    "plugin-system",
    "typescript",
    "modular"
  ],
  "author": "Ebin Player Team",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.2",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-typescript": "^12.1.4",
    "@tailwindcss/cli": "^4.1.14",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.6.2",
    "autoprefixer": "^10.4.21",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "rollup": "^4.52.4",
    "conventional-changelog-cli": "^2.2.2",
    "conventional-changelog": "^3.1.25",
    "standard-version": "^9.5.0",
    "typedoc": "^0.25.0",
    "http-server": "^14.1.1",
    "rollup-plugin-dts": "^6.2.3",
    "tailwindcss": "^4.1.14",
    "ts-jest": "^29.4.5",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3"
  }
}
